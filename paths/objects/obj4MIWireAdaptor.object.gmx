        <arguments>
          <argument>
            <kind>1</kind>
            <string>event_inherited();

if (!global.frozen)
{
    //if megaman is gone, leave
    if (!instance_exists(parent))
    {
        instance_destroy();
        exit;
    }
    
    //handle latching on to solids when it hits them
    if ((xcoll != 0) || (ycoll != 0)) &amp;&amp; (!hit)
    {
        hit = true;
        grav = 0;
        xspeed = 0;
        yspeed = 0;
        playSFX(sfx4MIWireAdaptorLatch)
        
        //calibrate megaman's direction
        if (x - parent.x != 0)
            parent.image_xscale = sign(x - parent.x);
    }
    
    if(!hit)
    {
        //change sprite depending on how we're moving
        if (abs(yspeed) &gt; abs(xspeed) + 2)  //if yspeed is much greater than xspeed, face up
            image_index = 2 + (sign(yspeed) * 2);
        else if (abs(xspeed) &gt; abs(yspeed) + 2) //if xspeed is much greater than yspeed, face left
            image_index = 2;
        else    //otherwise, face diagonally
            image_index = 2 + (sign(yspeed));
        
        //handle 'staying inside view' off the top of the screen
        if(sign(grav) != -1)
        {
            var screenTopBound = view_yview[0] - 4;
            exceedTopView = max(0, exceedTopView - (y - screenTopBound))
            if exceedTopView &gt; 0
                y = screenTopBound;
        }
        else    //do it off the bottom instead in reverse gravity
        {
            var screenTopBound = view_yview[0] + view_hview[0] + 4;
            exceedTopView = max(0, (y - screenTopBound) - exceedTopView)
            if exceedTopView &gt; 0
                y = screenTopBound;
        }
        
        //handle player behavior
        with(parent)
        {
            //halt horizontal momentum if we land
            if (ground)
                xspeed = 0;
            //fall gently
            else
                yspeed += 0.15 * gravDir; 
        }
    }
    else
    {
        //while it's hit...
        with(parent)
        {
            //draw in megaman directly
            moveTowardPoint(other.x, other.y, 6);
            //stop continuous landing sound
            if (ground) &amp;&amp; (sign(yspeed) = gravDir)
                yspeed = 0;
        }
        
        //let megaman jump out of it
        if (global.keyJumpPressed[parent.playerID])
        {
            with(parent)
            {
                yspeed = (jumpSpeed + jumpSpeedWater * (inWater &gt; 0)) * -gravDir;
                ground = false;
                canMinJump = true;
                jumpCounter += 1;
            }
            instance_destroy();
        }
    }
        
    //despawn off all the non-up sides
    if (x &lt;= view_xview[0]) || (y &gt; view_yview[0] + view_hview[0] &amp;&amp; parent.gravDir = 1) || (y &lt; view_yview[0] &amp;&amp; parent.gravDir = -1) || (x &gt;= view_xview[0] + view_wview[0] )
    {
        instance_destroy();
    }
}
</string>
