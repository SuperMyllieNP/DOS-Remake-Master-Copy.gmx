            <string>///When this weapon is equipped...

if (global.keyShootPressed[playerID] &amp;&amp; !playerIsLocked(PL_LOCK_SHOOT))
{
    i = fireWeapon(-3, -8, obj4MIWireAdaptor, 1, 0, 0, 0);
    if (i)
    {
        i.image_yscale = 1;
        
        //aim the weapon in many directions
        if (yDir = -1 * gravDir)   //aimed up
        {
            if (xDir != 0)  //up-right
            {
                i.xspeed = 3 * image_xscale;
                i.yspeed = -7 * gravDir;
            }
            else    //up
            {
                i.yspeed = -8 * gravDir;
            }
        }
        else if (yDir = 1 * gravDir)   //aimed down
        {
            if(xDir != 0)   //down-right
            {
                i.xspeed = 8 * image_xscale;
            }
            else    //down
            {
                i.xspeed = 6 * image_xscale;
                i.yspeed = 6 * gravDir;
            }
        }
        else    //straight-right / neutral
        {
            i.xspeed = 6 * image_xscale;
            i.yspeed = -6.3 * gravDir;
        }
        
        //lock controls
        i.wireMILock = lockPoolLock(
            localPlayerLock[PL_LOCK_MOVE],
            localPlayerLock[PL_LOCK_JUMP],
            localPlayerLock[PL_LOCK_GRAVITY],
            localPlayerLock[PL_LOCK_CLIMB],
            localPlayerLock[PL_LOCK_TURN],
            localPlayerLock[PL_LOCK_SLIDE],
            localPlayerLock[PL_LOCK_SPRITECHANGE]);
        
        //change the player's animation frame to wire's up-firing frame
        spriteX = 15;
        spriteY = 7;
        yspeed = 0;
        
        //perform a tick of physics to get this thing off the buster
        with(i)
        {
            x += xspeed;
            y += yspeed;
        }
    }
}
